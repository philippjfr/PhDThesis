file = {:home/philippjfr/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Albrecht et al. - 2002 - Visual cortex neurons of monkeys and cats temporal dynamics of the contrast response function.pdf:pdf},
