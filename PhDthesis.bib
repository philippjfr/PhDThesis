title = {{Orientation Selectivity of Synaptic Input to Neurons in Mouse and Cat Primary Visual Cortex}},
url = {http://neuro.cjb.net/content/31/34/12339.short$\backslash$nhttp://www.jneurosci.org/content/31/34/12339.full.pdf},
